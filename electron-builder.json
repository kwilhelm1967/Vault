{
  "appId": "com.localpasswordvault.app",
  "productName": "Local Password Vault",
  "publish": null,
  "generateUpdatesFilesForAllChannels": true,
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icons/icon.icns",
    "identity": "Developer ID Application: YOUR_NAME (TEAM_ID)",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "notarize": {
      "teamId": "TEAM_ID"
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icons/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "certificateFile": "./certs/windows-signing.pfx",
    "certificatePassword": "${WIN_CSC_KEY_PASSWORD}",
    "signingHashAlgorithms": ["sha256"],
    "publisherName": "Your Company Name"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icons/png/1024x1024.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "perMachine": false,
    "runAfterFinish": true,
    "artifactName": "${productName} Setup ${version}.${ext}",
    "installerIcon": "assets/icons/icon.ico",
    "uninstallerIcon": "assets/icons/icon.ico",
    "installerHeaderIcon": "assets/icons/icon.ico",
    "deleteAppDataOnUninstall": true
  },
  "portable": {
    "artifactName": "LocalPasswordVault-${version}-Portable.exe"
  }
}
